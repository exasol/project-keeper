<settings>
  <!-- This file is only used by release_droid_release_on_maven_central.yml
			 and sets timeout to 120 seconds
			 as recently PK observes constant timeouts when deploying to maven central.
			 see https://maven.apache.org/guides/mini/guide-http-settings.html -->
  <servers>
    <server>
      <id>ossrh</id>
      <configuration>
        <httpConfiguration>
          <all>
            <connectionTimeout>120000</connectionTimeout>
            <readTimeout>120000</readTimeout>
          </all>
        </httpConfiguration>
      </configuration>
    </server>
	</servers>
</settings>
