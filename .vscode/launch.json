{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Project Keeper Fix",
      "request": "launch",
      "mainClass": "com.exasol.projectkeeper.cli.ProjectKeeperLauncher",
      "projectName": "project-keeper-cli",
      "args": "fix",
      "vmArgs": ["-Dcom.exasol.projectkeeper.ownVersion=4.3.0"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "java",
      "name": "Update Maven plugin versions in templates",
      "request": "launch",
      "mainClass": "com.exasol.projectkeeper.validators.pom.io.TemplateUpdater",
      "projectName": "project-keeper-core",
      "cwd": "${workspaceFolder}/project-keeper"
    }
  ]
}
